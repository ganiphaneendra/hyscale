name: myservice
image:
  registry: x.y.z
  name: myServiceImage
  tag: 1.2.3
  buildSpec:
    stackImage: abc/pqr:1.0
    artifacts:
      - name: sample
        source: sample.war
        destination: /abc/def/ghi/sample.txt
    configCommands: |-
      echo "Hello, I'm configure commands"
    runCommandsScript: /abc/def/run.sh
    runCommands: |-
      echo "Hello, I'm run commands"

startCommand: "a,bc,def"
replicas: 
  min: 1
  max: 3
  cpuThreshold: 10%
memory: 123Mi-456Mi
cpu: 123m-456m

volumes:
  - name: vol-name
    path: /volume/mount/path
    storageClass: storageClass
  - name: vol-name-two
    path: /test/path
    size: 1Gi
    storageClass: storageClass

external: true
ports:
  - port: 8080/http
    healthCheck:
      httpPath: /sample
  - port : 8081

propsVolumePath: /abc/def/props.txt
props:
    key1: value1
    key2: value2
    
secretsVolumePath: /abc/def/secrets.txt
secrets:
   skey1: val1
   skey2: val2
